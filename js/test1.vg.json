{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 900,
  "height": 560,
  "padding": {"top": 0, "left": 0, "right": 0, "bottom": 0},
  "signals": [],
  "data": [
        {
        "name": "map",
        "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"},
        "transform": [
                {
                "type": "geopath",
                "projection": "projection"
                }
            ]
        },
        {
        "name": "table",
        "url": "data/Vis2DataV2.csv",
        "format": {"type": "csv", "parse": "auto"},
        "transform": [
                {
                "type": "geopoint",
                "projection": "projection",
                "fields": ["longitude", "latitude"]
                },
                {
                "type": "filter",
                "expr": "datum.x != null && datum.y != null"
                }
            ]
        },
        {
        "name": "big_data",
        "url": "data/Vis2DataV2.csv",
        "format": {"type": "csv", "parse": "auto"},
        "transform": [
                {
                "type": "aggregate",
                "groupby": ["Country"],
                "fields": ["MPASKM", "Type", "longitude"]
                }
            ]
        }
    ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "big_data", "field": "Type"},
      "range": {"scheme": "category20"}
    }
  ],
  "projections": [
        {
        "name": "projection",
        "type": "equalEarth",
        "translate": [{"signal": "width / 2"}, {"signal": "height / 2"}]
        }
    ],
  "marks": [
        {
            "type": "path",
            "from": {"data": "map"},
            "encode": {
                "enter": {
                    "fill": {"value": "#dedede"},
                    "stroke": {"value": "white"}
                },
                "update": {
                    "path": {"field": "path"}
                }
            }
        },
        {
            "type": "group",
            "name": "f",
            "from": {"facet": {"data": "big_data", "name": "facet", "groupby": "Country"}},
            "encode": {"update": {"x": {"field": "longitude"}, "y": {"field": "latitude"}}},
            "marks": [
                {
                    "type": "arc",
                    "from": {"data": "facet"},
                    "transform": [{"type": "pie", "field": "datum.field"}],
                    "encode": {
                        "enter": {
                            "startAngle": {"field": "startAngle"},
                            "endAngle": {"field": "endAngle"},
                            "fill": {"scale": "color", "field": "Type"},
                            "outerRadius": {"value": 50},
                            "x": {"signal": "width / 2"},
                            "y": {"signal": "height / 2"},
                            "opacity": {"value": 0.8}
                            }
                        }
                    }
                ]
        }
    ]
}