{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percentage of Passenger Transport taken by Car",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
        "data": {
            "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/js/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
        "mark": {
            "type": "geoshape", "fill": null, "stroke": "darkgray"
        }
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/data/W9HWData2.csv"
            },
            "key": "Country",
            "fields": ["Cars%", "Rail%", "Buses%", "latitude", "longitude"]
          }
        }
      ],
      "mark": {"type": "arc", "tooltip": true},
      "encoding": {
        "latitude": {"field": "latitude", "type": "quantitative"},
        "longitude": {"field": "longitude", "type": "quantitative"},
        "theta": {
            "field": "Cars%", ""
        }
        }
      }
  ]
}