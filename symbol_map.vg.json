{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Passenger Transport by Transport Method in Million Passenger Killometers (MPASKM)",
  "width": "container",
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
        "data": {
            "url": "https://raw.githubusercontent.com/bspi0005/FIT3179Week9Homework/refs/heads/main/js/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
        "mark": {
            "type": "geoshape", "fill": null, "stroke": "darkgray"
        }
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data":{
        "url": "https://raw.githubusercontent.com/bspi0005/FIT3179DataVisualisation2/refs/heads/master/data/MapData.csv"
      },
        "transform": [
          {"calculate": "datum.MPASKM*1000000", "as": "PASKM"}
        ],
      "mark": {"type": "point"},
      "encoding": {
        "latitude": {"field": "latitude", "type": "quantitative"},
        "longitude": {"field": "longitude", "type": "quantitative"},
        "size": {
          "field": "MPASKM",
          "type": "quantitative",
          "title": "MPASKM",
          "scale": {"rangeMax": 6000}
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Buses", "Cars", "Rail"],
            "range": ["#eeca3b", "#e45756", "#4c78a8"]
      }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Type", "type": "nominal", "title": "Transport Type"},
          {"field": "MPASKM", "type": "quantitative", "title": "MPASKM"}
        ]
        }
      }
  ],
  "config": {}
}