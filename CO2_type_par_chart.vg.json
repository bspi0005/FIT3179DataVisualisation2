{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/bspi0005/FIT3179DataVisualisation2/refs/heads/master/data/CO2perPASKM.csv"
  },
  "width": "container",
  "layer": [
  {
    "mark": "bar",
    "title": "Emissions from Different Transport Types in Grams of CO2 per Passenger-Kilometre",
    "encoding": {
      "x": {"aggregate": "sum", "field": "CO2", "title": "g(CO2eq)/PASKM"},
      "y": {"field": "Type"},
      "color": {
      "field": "Type",
      "type": "nominal",
      "scale": {
        "domain": ["Buses", "Cars", "Rail"],
        "range": ["#eeca3b", "#e45756", "#4c78a8"]
      }
      },
      "tooltip": [
        {"field": "Type", "type": "nominal", "title": "Transport Type"},
        {"field": "CO2", "type": "quantitative", "title": "g(CO2eq)/PASKM"}
      ]
    }
  },
  {
    "mark": {
    "type": "text",
    "align": "left",
    "baseline": "middle",
    "dx": 3,
    "fontSize": 11.5,
    "fontStyle": "bold"
    },
    "encoding": {
    "text": {"field": "CO2", "type": "nominal"},
    "x": {"aggregate": "sum", "field": "CO2"},
    "y": {"field": "Type"},
    "color": {
    "field": "Type",
    "type": "nominal",
    "scale": {
      "domain": ["Buses", "Cars", "Rail"],
      "range": ["#eeca3b", "#e45756", "#4c78a8"]
    }
    }
    }
  }
  ],
  "config": {}
}